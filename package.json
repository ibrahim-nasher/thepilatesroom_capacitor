{
  "name": "thepilatesroom-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "ThePilatesRoom - Pilates class booking mobile app",
  "scripts": {
    "build": "tsc && vite build",
    "build:ios": "npm run build && npx cap sync ios && open ios/App/App.xcworkspace",
    "build:android": "npm run build && npx cap sync android && npx cap open android",
    "sync": "npx cap sync",
    "sync:ios": "npx cap sync ios",
    "sync:android": "npx cap sync android",
    "open:ios": "open ios/App/App.xcworkspace",
    "open:android": "npx cap open android",
    "run:ios": "npx cap run ios",
    "run:android": "npx cap run android",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor-firebase/authentication": "^7.5.0",
    "@capacitor-firebase/messaging": "^7.5.0",
    "@capacitor/android": "^7.0.0",
    "@capacitor/app": "^7.0.1",
    "@capacitor/camera": "^7.0.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/device": "^7.0.0",
    "@capacitor/haptics": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@capacitor/network": "^7.0.0",
    "@capacitor/preferences": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.1",
    "@capacitor/screen-orientation": "^7.0.0",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "axios": "^1.7.7",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^11.0.1",
    "i18next": "^24.0.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.1.0",
    "react-router-dom": "^6.26.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "sass": "^1.81.0",
    "terser": "^5.44.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.1"
  }
}
